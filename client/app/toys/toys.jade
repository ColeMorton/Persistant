div(ng-include='"components/navbar/navbar.html"')

.container
  .row
    .col-lg-12
      h1.page-header Tricker

  .row
    .col-md-12
      | Age: {{tricker.age}}
    .col-md-12
      | Fitness: {{tricker.fitness}}
    .col-md-12
      | Health: {{health}}
    .col-md-12
      | Next health point in: {{nextHealthPointIn}}
